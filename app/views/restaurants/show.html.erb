<h1><%= @restaurant.name %></h1>

<h3><%= @restaurant.category %></h3>

<p><%= @restaurant.address %></p>

<p>contact us at: <%= @restaurant.phone_number %></p>

<p><%= link_to "Back to restaurant list", restaurants_path %></p>

<p><%= link_to "Leave a review for #{@restaurant.name}", new_restaurant_review_path(@restaurant)%></p>

<p><strong>Reviews</strong></p>
<ul class="list-group">

  <% @restaurant.reviews.each do |review| %>

    <li class="list-group-item"><%= review.content %>  <%= link_to "Delete",
      review_path(review),
      data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </li>
    <li class="list-group-item"><%= review.rating %>/5 stars</li>
  <% end %>
</ul>
